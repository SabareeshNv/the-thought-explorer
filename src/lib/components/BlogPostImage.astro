---
import { Picture } from "@astrojs/image/components";

const { src, alt, aspRatio = "16:9", ...props } = Astro.props;
---

<figure>
    <Picture
        src={src}
        alt={alt}
        widths={[200, 400, 800]}
        sizes="(max-width: 800px) 100vw, 800px"
        aspectRatio={aspRatio}
        class="shadow rounded"
        {...props}
    />
</figure>
