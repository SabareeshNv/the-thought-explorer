---
const nav = [
    { text: "Home", link: "/" },
    { text: "Blog", link: "/blog" },
    { text: "About", link: "/about" },
    { text: "Contact", link: "/contact" },
];
---

<header class="py-4 bg-white custom-shadow">
    <div class="layout flex flex-wrap justify-between items-center">
        <a href="/" class="font-heading font-semibold text-2xl"
            >The Thought Explorer
        </a>
        <div id="toggle" class="md:hidden cursor-pointer text-xl">&#9776;</div>
        <nav id="nav" class="hidden md:flex w-full md:w-auto">
            <ul class="flex flex-col pt-4 md:pt-0 md:flex-row">
                {
                    nav.map((item) => (
                        <li class="py-4 md:py-0 md:px-6">
                            <a
                                href={item.link}
                                class="font-medium hover:text-red-900 block"
                            >
                                {item.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
    </div>
</header>

<script>
    document.getElementById("toggle").addEventListener("click", () => {
        document.getElementById("nav").classList.toggle("hidden");
    });
</script>
