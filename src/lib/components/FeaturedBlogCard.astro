---
import { Picture } from "@astrojs/image/components";
import FormattedDate from "./FormattedDate.astro";
import { slugify } from "@utils/helpers";

const { post } = Astro.props;
const { title, summary, pubDate, category, image } = post.data;
---

<!-- [#CCE6D0] -->
<article class="grid md:grid-cols-3 md:gap-2 bg-accent">
    <div class="md:col-span-2">
        <a href={`/blog/${post.slug}/`}>
            <Picture
                src={image.src}
                alt={image.alt}
                widths={[200, 400, 800, 1200]}
                sizes="(max-width: 800px) 100vw, 1200px"
                aspectRatio="16:9"
                format="webp"
                position={"attention"}
                class="h-full cover"
            />
        </a>
    </div>

    <div class="p-6">
        <div class="flex flex-wrap items-center justify-between">
            <a
                href={`/category/${slugify(category)}`}
                class="text-sm tracking-wider font-semibold text-purple-900 uppercase"
                >{category}</a
            >

            <FormattedDate
                date={pubDate}
                class="text-sm text-gray-900 tracking-wider font-semibold"
            />
        </div>
        <h2 class="py-4 text-2xl font-semibold font-heading">
            <a href={`/blog/${post.slug}/`}>{title}</a>
        </h2>
        <div class="text-md">
            {summary}
        </div>
    </div>
</article>
